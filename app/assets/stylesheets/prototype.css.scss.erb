#editor {
  margin-left: auto;
  margin-right: auto;
  overflow: auto;
  width: 100%;
  #components {
    float: left;
    width: 312px;
    background: #f3f3f3;
    border-right: solid 1px #a5a5a5;
    .ui-widget-content {
      background: transparent;
      border: none;
    }
    #tabs {
      height: 50px;
      ul.tabs {
        padding: 0px;
        margin: 0px;
        background: #e4e4e4;
        padding-top: 10px;
        list-style: none;
        display: block;
        text-align: center;
        border-bottom: solid 1px #bbbbbb;
        li {
          background: none;
          border: none;
          margin: 0px;
          border-top-left-radius: 15px;
          border-top-right-radius: 15px;
          padding: 0px;
          height: 40px;
          width: 130px;
          display: inline-block;
          a {
            color: #999999;
            margin-top: 13px;
            display: block;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
          }
          &.ui-tabs-selected  {
            background: #F3F3F3;
            border: solid 1px #bbbbbb;
            border-bottom: none;
            a {
              color: #000;
              background: #f3f3f3;
              height: 30px;
            }
          }
        }
      }
    }
  }
#library {
  ul {
    list-style: none;
